<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Quản lý nhà hàng chuyên nghiệp' %>">
    <meta name="author" content="Your Company">
    <title><%= title ? `${title} | Nhà Hàng` : 'Nhà Hàng' %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/main.css">
    
    <!-- Page-specific CSS -->
    <% if (typeof stylesheets !== 'undefined') { %>
        <% stylesheets.forEach(function(sheet) { %>
            <link rel="stylesheet" href="<%= sheet %>">
        <% }); %>
    <% } %>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <%- include('partials/header') %>
    
    <!-- Main Content -->
    <main class="flex-grow-1 py-4">
        <div class="container-fluid px-4">
            <% if (typeof breadcrumbs !== 'undefined') { %>
                <%- include('partials/breadcrumb', { breadcrumbs: breadcrumbs }) %>
            <% } %>
            
            <% if (typeof alerts !== 'undefined' && alerts.length) { %>
                <%- include('partials/alerts', { alerts: alerts }) %>
            <% } %>
            
            <%- body %>
        </div>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- Back to Top Button -->
    <button type="button" class="btn btn-primary btn-floating btn-lg rounded-circle" id="btn-back-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/assets/js/main.js"></script>
    
    <!-- Toast Container -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="toast-container" class="toast-container"></div>
    </div>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Page-specific JS -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
    
    <!-- Initialize any page-specific JS -->
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
        
        // Initialize popovers
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl);
        });
    </script>
</body>
</html>
