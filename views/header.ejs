<!-- views/header.ejs -->
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Hệ thống quản lý nhà hàng">
  <meta name="keywords" content="quản lý nhà hàng, quản lý nhân viên, quản lý đơn hàng">
  <title><%= title || 'Quản Lý Nhà Hàng' %></title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <header class="header">
    <div class="container">
      <nav class="nav">
        <div class="logo">
          <a href="/admin/dashboard" class="nav-link">
            <span class="text-primary">Quản Lý</span> Nhà Hàng
          </a>
        </div>
        
        <div class="nav-links">
          <a href="/admin/dashboard" class="nav-link <%= currentRoute === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-home"></i> Dashboard
          </a>
          <a href="/admin/employees" class="nav-link <%= currentRoute === 'employees' ? 'active' : '' %>">
            <i class="fas fa-users"></i> Nhân Viên
          </a>
          <a href="/admin/revenue" class="nav-link <%= currentRoute === 'revenue' ? 'active' : '' %>">
            <i class="fas fa-chart-line"></i> Doanh Thu
          </a>
          <a href="/admin/inventory" class="nav-link <%= currentRoute === 'inventory' ? 'active' : '' %>">
            <i class="fas fa-box"></i> Kho Hàng
          </a>
          <a href="/admin/dishes" class="nav-link <%= currentRoute === 'dishes' ? 'active' : '' %>">
            <i class="fas fa-utensils"></i> Món Ăn
          </a>
        </div>

        <div class="user-menu">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
              <img src="/assets/images/user-avatar.png" alt="Avatar" class="avatar">
              <%= user ? user.ten_nhan_vien : 'User' %>
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                <i class="fas fa-user me-2"></i><%= user?.ho_ten || 'Admin' %>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/admin/profile">
                    <i class="fas fa-user-cog me-2"></i> Hồ Sơ
                  </a>
                </li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li>
                  <a class="dropdown-item text-danger" href="/admin/logout">
                    <i class="fas fa-sign-out-alt me-2"></i> Đăng Xuất
                  </a>
                </li>
              </ul>
          </div>
        </div>
      </div>
    </div>
  </header>
  <main class="container-fluid mt-4">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title mb-4"><%= title || 'Quản Lý Nhà Hàng' %></h3>